#include<iostream>

using namespace std;
int main()
{
    int n;
    cin>>n;
    int count=0;
    int candles[n];
    int max;
    
    for(int i=0;i<n;i++)
    {
        cin>>candles[i];
        
    }
    
    max=candles[0];
     for(int i=0;i<n;i++)
    {
        
        if(candles[i]>max)
        {
            max=candles[i];
            
        }
    }
    
    for(int i=0;i<n;i++)
    {
        if(candles[i]==max)
        {
            count++;
        }
    }
    cout<<count; 
    
  return 0;      
}
